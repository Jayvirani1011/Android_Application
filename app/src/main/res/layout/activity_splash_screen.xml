        android:textAlignment="center"
        android:textColor="#090809"
        android:textSize="50dp"
        android:textStyle="italic"/>

    <TextView
        android:id="@+id/textview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
